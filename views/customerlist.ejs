<br>
<br><hr>
<section style="margin-bottom: 10%;">
  <center><h2 class="customerlist-heading">CUSTOMER LIST</h2></center>
  <hr>
  <table class="table table-striped customerlist-table">
    <thead>
      <tr>
        <th>S.no.</th>
        <th>Name</th>
        <th>Email</th>
        <th>Balance</th>
      </tr>
    </thead>
    <tbody>
      <%customers.forEach(function(customer){%>
        <tr>
          <td><%=i%></td>
          <td><%=customer.name%></td>
          <td><%=customer.email%></td>
          <td><%=customer.balance%></td>
        </tr>
        <%i++;%>
      <%})%>
    </tbody>
  </table>
</section>

<%- include ("footer")%>